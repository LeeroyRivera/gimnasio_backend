{
  "info": {
    "name": "Pagos - Gym API",
    "description": "Colección Postman para endpoints del módulo de pagos: Planes de Membresía, Membresías y Pagos. Incluye ejemplos de cuerpo y pruebas básicas.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Planes de Membresía",
      "item": [
        {
          "name": "Listar planes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/pagos/planes/listar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pagos", "planes", "listar"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Guardar plan",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre_plan\": \"Mensual\",\n  \"descripcion\": \"Acceso general al gimnasio por 30 días\",\n  \"duracion_dias\": 30,\n  \"acceso_gimnasio\": true,\n  \"acceso_entrenador\": false,\n  \"acceso_asistente_virtual\": true,\n  \"estado\": \"Activa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pagos/planes/guardar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pagos", "planes", "guardar"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);",
                  "pm.test('Plan creado tiene id', () => pm.response.json().id);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Editar plan",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"descripcion\": \"Acceso general + 1 clase grupal semanal\",\n  \"estado\": \"Activa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pagos/planes/editar?id={{planId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pagos", "planes", "editar"],
              "query": [{ "key": "id", "value": "{{planId}}" }]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Eliminar plan",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/pagos/planes/eliminar?id={{planId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pagos", "planes", "eliminar"],
              "query": [{ "key": "id", "value": "{{planId}}" }]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
